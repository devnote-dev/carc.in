{
  "name": "crystal",
  "versions": ["0.7.6", "0.7.5", "0.7.4", "0.7.3", "0.7.2", "0.7.1", "0.6.1"],
  "dependencies": [
    "binutils",
    "gcc",
    "libatomic_ops",
    "libunwind",
    "libxml2",
    "libyaml",
    "llvm",
    "pcre",
    "libevent"
  ],
  "aur_dependencies": ["libpcl", "gc-static"],
  "timeout": 10,
  "memory":  256,
  "allowed_programs": [
    "puts \"hi\"",
    "`ls -al`",
    "exit",
    "r, w = IO.pipe;  Process.run(\"/bin/cat\", output: w, input: \"hi\"); p(r.read(1))",
    "lib LibC; fun mypopen = popen(command : UInt8*, type : UInt8*); end; LibC.mypopen(\"ls\", \"r\")",
    "require \"compiler/crystal/**\"; Crystal::Parser.parse(\"foo { |x| x.bar }\")",
    "sleep 0.01",
    "File.open(\"/dev/random\") {|io| io.read(1) }",
    "require \"secure_random\"; SecureRandom.hex(64)",
    "require \"benchmark\"; Benchmark.bm do |b|; b.report(\"Here\") { puts \"Yes\" }; end"
  ],
  "allowed_failing_programs": [
    "putss \"hi\"",
    "p 5/0"
  ]
}
